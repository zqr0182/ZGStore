@using ZG.Common.DTO
@model ZG.Common.DTO.CheckoutDetails

@{
    ViewBag.Title = "ZGStore: Billing Address";
}

<h2>Choose a billing Address</h2>

@using (Html.BeginForm("ReviewOrder", "Cart", new{SameAddress = true}))
{
    <div>@Html.DisplayFor(m => m.ShippingDetails.FullName)</div>
    <div>@Html.DisplayFor(m => m.ShippingDetails.Address1)</div>
    if (!string.IsNullOrWhiteSpace(Model.ShippingDetails.Address2))
     {
         <div>@Html.DisplayFor(m => m.ShippingDetails.Address2)</div>
     }
    <div>@Html.DisplayFor(m => m.ShippingDetails.City), @Html.DisplayFor(m => m.ShippingDetails.State) @Html.DisplayFor(m => m.ShippingDetails.Zip)</div>
    <div>@Html.DisplayFor(m => m.ShippingDetails.Country)</div>
    <div>@Html.DisplayFor(m => m.ShippingDetails.Phone)</div>
    <p>
        <input type="submit" value="Use this address" />
    </p>
}


<h2>Or enter a new billing address</h2>
@using (Html.BeginForm("ReviewOrder", "Cart"))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>BillingAddress</legend>
        
        <div class="editor-label">
            @Html.LabelFor(m => m.BillingDetails.FullName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(m => m.BillingDetails.FullName)
            @Html.ValidationMessageFor(m => m.BillingDetails.FullName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.BillingDetails.Address1)
        </div>
        <div class="editor-field">
            @Html.EditorFor(m => m.BillingDetails.Address1)
            @Html.ValidationMessageFor(m => m.BillingDetails.Address1)
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.BillingDetails.Address2)
        </div>
        <div class="editor-field">
            @Html.EditorFor(m => m.BillingDetails.Address2)
            @Html.ValidationMessageFor(m => m.BillingDetails.Address2)
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.BillingDetails.City)
        </div>
        <div class="editor-field">
            @Html.EditorFor(m => m.BillingDetails.City)
            @Html.ValidationMessageFor(m => m.BillingDetails.City)
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.BillingDetails.State)
        </div>
        <div class="editor-field">
            @Html.EditorFor(m => m.BillingDetails.State)
            @Html.ValidationMessageFor(m => m.BillingDetails.State)
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.BillingDetails.Country)
        </div>
        <div class="editor-field">
            @Html.EditorFor(m => m.BillingDetails.Country)
            @Html.ValidationMessageFor(m => m.BillingDetails.Country)
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.BillingDetails.Zip)
        </div>
        <div class="editor-field">
            @Html.EditorFor(m => m.BillingDetails.Zip)
            @Html.ValidationMessageFor(m => m.BillingDetails.Zip)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(m => m.BillingDetails.Phone)
        </div>
        <div class="editor-field">
            @Html.EditorFor(m => m.BillingDetails.Phone)
            @Html.ValidationMessageFor(m => m.BillingDetails.Phone)
        </div>

        <p>
            <input type="submit" value="Continue" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
